{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/react-in-jsx-scope": "off",
        "semi": 0,
        "jsx-a11y/aria-role": [ 0, {
            "allowedInvalidRoles": [],
            "ignoreNonDOM": true
        }],
        "indent": ["error", 2],
        "react/prop-types": "off",
        "jsx-a11y/label-has-associated-control": ["error", {
            "required": {
              "some": ["nesting", "id"]
            }
        }],
        "no-param-reassign": ["error", { "props": false }]
    }
}
